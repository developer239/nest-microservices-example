{
  "name": "nest-microservices-example",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "test": "jest",
    "format": "prettier --write '*/**/*.{ts,md,json}'",
    "lint:ts": "eslint --ext .ts {apps,libs}",
    "husky:prepare": "husky install",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "auth:dev": "nest start auth --watch",
    "auth:migration:generate": "npm run typeorm -- --dataSource=apps/auth/src/modules/database/data-source.ts migration:generate",
    "auth:migration:run": "npm run typeorm -- --dataSource=apps/auth/src/modules/database/data-source.ts migration:run",
    "auth:migration:revert": "npm run typeorm -- --dataSource=apps/auth/src/modules/database/data-source.ts migration:revert",
    "auth:schema:drop": "npm run typeorm -- --dataSource=apps/auth/src/modules/database/data-source.ts schema:drop",
    "events:dev": "nest start events --watch",
    "events:migration:generate": "npm run typeorm -- --dataSource=apps/events/src/modules/database/data-source.ts migration:generate",
    "events:migration:run": "npm run typeorm -- --dataSource=apps/events/src/modules/database/data-source.ts migration:run",
    "events:migration:revert": "npm run typeorm -- --dataSource=apps/events/src/modules/database/data-source.ts migration:revert",
    "events:schema:drop": "npm run typeorm -- --dataSource=apps/events/src/modules/database/data-source.ts schema:drop"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.1",
    "@nestjs/typeorm": "^10.0.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "joi": "^17.9.2",
    "pg": "^8.11.1",
    "pg-connection-string": "^2.6.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@linters/commitlint-config": "^1.8.0",
    "@linters/eslint-config-jest": "^1.12.1",
    "@linters/eslint-config-node": "^1.12.0",
    "@linters/eslint-config-typescript": "^1.19.1",
    "@linters/prettier-config": "^1.4.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/joi": "^17.2.3",
    "@types/node": "^20.3.1",
    "@types/pg-connection-string": "^2.0.0",
    "@types/supertest": "^2.0.12",
    "env-cmd": "^10.1.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
